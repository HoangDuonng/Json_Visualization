{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@jsondraw/common": ["./src/jsondraw/common"],
      "@jsondraw/common/*": ["./src/jsondraw/common/*"],
      "@jsondraw/math": ["./src/jsondraw/math"],
      "@jsondraw/math/*": ["./src/jsondraw/math/*"],
      "@jsondraw/element": ["./src/jsondraw/element"],
      "@jsondraw/element/*": ["./src/jsondraw/element/*"],
      "@jsondraw/jsondraw": ["./src/jsondraw/engine"],
      "@jsondraw/jsondraw/*": ["./src/jsondraw/engine/*"],
      "@jsondraw/utils": ["./src/jsondraw/utils"],
      "@jsondraw/utils/*": ["./src/jsondraw/utils/*"]
    },
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "src",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/jsondraw"
  ]
}
